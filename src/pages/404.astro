---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="nl">
  <head>
    <BaseHead title="Pagina niet gevonden | Pesai" description="Deze pagina bestaat niet of is verplaatst." />
  </head>
  <body class="bg-gray-50 text-gray-900">
    <Header />
    <main class="max-w-2xl mx-auto px-6 py-20 text-center">
      <h1 class="text-5xl font-extrabold text-blue-700 mb-4">404</h1>
      <p class="text-lg mb-6">Oeps! Deze pagina bestaat niet.</p>
      <a href="/" class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
        Terug naar homepagina
      </a>
    </main>
    <Footer />
  </body>
</html>
